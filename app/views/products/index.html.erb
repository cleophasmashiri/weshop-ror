<h1>Listing Products</h1>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <%= link_to (image_tag product.image.url(:medium), class: :image), product %>
      </div>
    </div>

  <p><%= product.name %></p>
  <br><%= product.name %>
  <br><%= product.description %>
  <br><%= link_to 'Show', product %>
  <br><%= link_to 'Edit', edit_product_path(product) %>
  <br><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
 <% end %>
</div>