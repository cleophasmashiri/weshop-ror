<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Exprerience shopping like no other</h1>
    <p></p>
    <p><%= link_to "Sign up", new_user_registration_path, class: 'btn btn-primary btn-lg' %></p>
  </div>
<% end %>

<h1>Listing Products</h1>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <%= link_to (image_tag product.image.url(:thumb), class: :image), product %>
      </div>
  
  <%= product.name %>
  <br><%= number_to_currency product.price %>
  <br>
  
  <%= link_to content_tag("span", "", class:"glyphicon glyphicon-shopping-cart")+" Add to Cart", shopping_cart_path(:product_id => product), :method => 'POST', class: 'btn btn-primary btn-default',role: 'button' %>  

  | <%= link_to 'Show', product %>
  | <%= link_to 'Edit', edit_product_path(product) %>
  | <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
 <% end %>
</div>

<br><br>
<%= link_to 'Add New', new_product_path %>